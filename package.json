{
  "name": "dummy",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "babel src -d dist",
    "test": "node dist/a",
    "test-cov": "cross-env BABEL_ENV=test npm run build && nyc --all node dist/a && nyc report --reporter html"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-plugin-istanbul": "^2.0.3",
    "babel-preset-es2015": "^6.16.0",
    "cross-env": "^3.1.3",
    "nyc": "^8.3.1"
  },
  "babel": {
    "presets": ["es2015"],
    "env": {
      "test": {
        "plugins": ["istanbul"]
      }
    }
  },
  "nyc": {
    "include": "src/**/*.js",
    "instrument": false,
    "sourceMap": false
  } 
}
